{
    "version": 2,
    "builds": [
        {
            "src": "api/serverless.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/serverless.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO"
    },
    "functions": {
        "api/serverless.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}
